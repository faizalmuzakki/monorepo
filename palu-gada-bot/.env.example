# Discord Bot Token (Required)
# Get this from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Discord Application Client ID (Required)
# Get this from your Discord application's OAuth2 page
CLIENT_ID=your_client_id_here

# Discord Application Client Secret (Required for Admin Panel)
# Get this from your Discord application's OAuth2 page
CLIENT_SECRET=your_client_secret_here

# Guild ID for testing (Optional)
# If set, commands will be deployed to this specific guild only (instant)
# If not set, commands will be deployed globally (can take up to 1 hour)
GUILD_ID=your_guild_id_here

# Bot Owner ID (Required for Admin Panel)
# Your Discord user ID - enables owner-only features
OWNER_ID=your_discord_user_id

# Guild Access Mode (Optional, default: open)
# 'open' = bot works in any server
# 'allowlist' = bot only works in allowed servers
GUILD_MODE=open

# Allowed Guild IDs (Optional)
# Comma-separated list of guild IDs allowed to use the bot
# Only used when GUILD_MODE=allowlist
# ALLOWED_GUILDS=123456789,987654321

# Anthropic API Key (Required for /summarize command)
# Get this from https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===== Admin Panel Settings =====

# Domain for Traefik reverse proxy (Required for Docker deployment with Traefik)
# The API will be accessible at bot-api.${DOMAIN}
DOMAIN=example.com

# Enable/disable the admin API (default: true)
API_ENABLED=true

# Admin API port (default: 3000)
API_PORT=3000

# JWT Secret for admin panel sessions
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# If not set, a random secret is generated on startup (tokens invalidate on restart)
JWT_SECRET=your_jwt_secret_here

# OAuth2 Redirect URI
# This should point to your Cloudflare Pages URL + /callback
# Example: https://your-bot-admin.pages.dev/callback
OAUTH_REDIRECT_URI=http://localhost:5173/callback

# Admin Panel URL (for CORS)
# Your Cloudflare Pages URL
ADMIN_PANEL_URL=http://localhost:5173

# Public URL for webhooks (Required for GitHub webhooks)
# This should be your bot's publicly accessible URL
# Example: https://bot-api.example.com
PUBLIC_URL=https://bot-api.example.com

# ===== Optional =====

# Spotify Credentials (Optional - for Spotify support)
# Get these from https://developer.spotify.com/dashboard
# Note: play-dl handles Spotify without API keys by searching YouTube
# SPOTIFY_CLIENT_ID=your_spotify_client_id
# SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# ===== Deployment =====

# Webhook Secret for /deploy command (Required)
# Must match the WEBHOOK_SECRET in home-server .env
WEBHOOK_SECRET=your_webhook_secret_here

# Allowed Deploy Users (Optional)
# Comma-separated list of user IDs allowed to use /deploy
# ALLOWED_DEPLOY_USERS=123456789,987654321

# Deploy Channel Restriction (Optional)
# Only allow /deploy in this channel. Get channel ID by enabling Developer Mode in Discord.
# DEPLOY_CHANNEL_ID=your_channel_id
